<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".ui.settings.SettingsActivity">

    <ImageView
        android:id="@+id/top_settings_forme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_page" />

    <TextView
        android:id="@+id/textView1"
        android:layout_height="116dp"
        android:text="@string/title_page_about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/title_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_version"
            android:gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/big_john"
            android:textAppearance="@style/text_activity"
            android:textColor="@color/text_color_light" />
    </LinearLayout>
  />

</androidx.constraintlayout.widget.ConstraintLayout>