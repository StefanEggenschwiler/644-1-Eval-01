<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Remembeer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_primary</item>
        <item name="colorPrimaryVariant">@color/yellow_secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/yellow_primary</item>
        <item name="colorAccent">@color/yellow_primary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style pour les titres des pages -->
    <!-- layout.constraint à définir directement selon la situation -->
    <style name="title_activity" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/yellow_primary</item>
        <item name="android:textSize">50dp</item>
        <item name="android:fontFamily">@font/big_john</item>
        <item name="android:rotation">-16</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- Style pour les textes de descriptions -->
    <style name="text_activity" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/paragraphe</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:drawableEnd">@drawable/edit_text_icon</item>
    </style>


    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/paragraphe</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:drawableEnd">@drawable/edit_text_icon</item>
    </style>
    <style name="edit_text_search" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/big_john</item>
        <item name="android:drawableEnd">@drawable/edit_text_icon</item>
        <item name="android:background">@drawable/btn_recherche</item>
        <item name="android:textColor">@color/background_color_primary</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_titre" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/big_john</item>
        <item name="android:textSize">@dimen/titre2</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="floating_action" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="maxImageSize">20dp</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="Theme.Remembeer.Dark">
        <item name="android:background">@color/background_color_dark</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="Theme.Remembeer.Light">
        <item name="android:background">@color/background_color_light</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Theme.Remembeer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Remembeer.EditText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/yellow_primary</item>
    </style>
    <style name="Theme.Remembeer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorSecondary">@color/text_color_dark</item>
        <item name="android:background">@color/background_color_dark</item>
        <item name="colorControlNormal">@color/text_color_dark</item>
    </style>

    <style name="Theme.Remembeer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>