<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/tvMainShielingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dk_lemon_yellow_sun"
        android:text="@string/title_shieling_name"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMainShieling" />

    <ImageView
        android:id="@+id/ivMainShieling"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainShieling"
        app:srcCompat="@drawable/placeholder_shieling" />

    <TextView
        android:id="@+id/tvMainShieling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/dk_lemon_yellow_sun"
        android:text="@string/title_shieling"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <ImageView
        android:id="@+id/ivLogoRacletteDb"
        android:layout_width="298dp"
        android:layout_height="113dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_raclettedb" />

    <TextView
        android:id="@+id/tvMainFavoritesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dk_lemon_yellow_sun"
        android:text="@string/title_favorites"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoRacletteDb" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainFavoritesTitle">

        <TableRow
            android:id="@+id/trImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivMainFavorites1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="8dp"
                app:srcCompat="@drawable/placeholder" />

            <ImageView
                android:id="@+id/ivMainFavorites2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="8dp"
                app:srcCompat="@drawable/placeholder" />

            <ImageView
                android:id="@+id/ivMainFavorites3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="8dp"
                app:srcCompat="@drawable/placeholder" />
        </TableRow>

        <TableRow
            android:id="@+id/trLabels"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMainFavorites1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dk_lemon_yellow_sun"
                android:text="@string/title_favorites_cheesename"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvMainFavorites2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dk_lemon_yellow_sun"
                android:text="@string/title_favorites_cheesename"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvMainFavorites3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dk_lemon_yellow_sun"
                android:text="@string/title_shieling_name"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>